#include <unistd.h>

void    ft_putchar(char c)
{
    write(1, &c, 1);
}

void    ft_print_alphabet(void)
{
    char a = 'a';
    while (a <= 'z')
    {
        ft_putchar(a);
        a++;
    }
}

int     main (void)
{
    ft_print_alphabet();
    return 0;
}
